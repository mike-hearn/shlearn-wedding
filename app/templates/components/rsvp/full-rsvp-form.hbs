{{#if unknownGuests}}
  {{rsvp/unknown-guest-form guest=firstUnknownGuest}}
{{else}}
<form {{action 'submitForm' on="submit"}}>
  {{#each allValidGuests as |guest|}}
    <div class="rsvp__individual-rsvp">
      <h4 class="text-center">RSVP for {{guest.displayName}}</h4>
      {{rsvp/attendance-questions guest=guest}}
      {{rsvp/meal-questions guest=guest}}
      {{rsvp/additional-questions invitation=invitation}}
    </div>
  {{/each}}
  <button type="submit" class="btn">Submit RSVP</button>
</form>
{{/if}}